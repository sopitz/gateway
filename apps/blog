NameVirtualHost *:80

<VirtualHost *:80>
  	ServerAdmin simon.opitz@eventsos.de 
	ServerName simonopitz.me

  	ProxyRequests off
        <Proxy *>
            Order deny,allow
            Allow from all
        </Proxy>
 
        <Location />
            ProxyPass http://blog.simonopitz.me:3000/ retry=0
            ProxyPassReverse http://blog.simonopitz.me:3000/
        </Location>
</VirtualHost>
